<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FullScreenMapController"
      spacing="10" alignment="center" style="-fx-background-color: #FFFFFF; -fx-padding: 10;">
    <WebView fx:id="mapWebView" prefWidth="780" prefHeight="540"/>
    <Label fx:id="coordinatesLabel" text="Coordonnées: Non sélectionnées"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="confirmButton" text="Confirmer" onAction="#handleConfirmLocation"/>
        <Button text="Annuler" onAction="#handleCancel"/>
    </HBox>
</VBox>